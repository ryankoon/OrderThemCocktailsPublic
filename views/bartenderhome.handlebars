<script src="/js/bartenderhome.js"></script>
<h1 id="employeeWelcomeText">Welcome</h1>
<button class="btn btn-danger" onclick="logout()">Logout</button>
    <div id="openorders-table-container">
        <h3>Open Orders</h3>
        <table class="table">
            <thead class="thead-default">
            <tr>
                <th>Order #</th>
                <th>Customer</th>
                <th>Table #</th>
                <th>Notes</th>
                <th>Drink</th>
                <th class="complete-order-checkbox-cell">Complete</th>
            </tr>
            </thead>
            <tbody>
            {{#each openOrders}}
                <tr>
                    <td>{{this.0.order_no}}</td>
                    <td>{{this.0.cust_name}}</td>
                    <td>{{this.0.table_no}}</td>
                    <td>{{this.0.notes}}</td>
                    <td></td>
                    <td class="complete-order-checkbox-cell"><input class="complete-order-checkbox" type="checkbox" value="{{order_no}}"></td>
                </tr>
                {{#each this}}
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>{{name}}</td>
                        <td></td>
                    </tr>
                {{/each}}
            {{/each}}
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary" onclick="updateOpenOrders()">Update</button>
    </div>
    <div id="orderhistory-table-container">
        <h3>History</h3>
        <table class="table">
            <thead class="thead-default">
            <tr>
                <th>Date</th>
                <th>Order #</th>
                <th>Customer</th>
                <th>Drink</th>
            </tr>
            </thead>
            <tbody>
            {{#each ordersHistory}}
                <tr>
                    <td>{{date_time}}</td>
                    <td>{{order_no}}</td>
                    <td>{{cust_name}}</td>
                    <td>{{drink}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</form>