<script src="../js/employeelogin.js"></script>
<div class="container">
    <h1>Employee Login</h1>
    <form>
        <div class="alert collapse"></div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="employeeloginuser">Username</label>
                    <input type="text" class="form-control" id="employeeloginuser" placeholder="Enter Username or ID" autofocus>
                </div>
                <div class="form-group">
                    <label for="employeeloginpass">Password</label>
                    <input type="password" class="form-control" id="employeeloginpass" placeholder="Password">
                </div>
                <button id="employeeloginbutton" type="button" class="btn btn-primary" onclick="onLogin()">Login</button>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="role-select">Role</label>
                    <select class="form-control" id="role-select">
                        <option id="role-bartender">Bartender</option>
                        <option id="role-manager">Manager</option>
                    </select>
                </div>
            </div>
        </div>

    </form>
</div>
